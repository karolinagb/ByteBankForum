@model ByteBank.Forum.ViewModels.ContaEsqueciSenhaViewModel

<h2>Esqueci minha senha</h2>
<p>Digite seu e-mail de cadastro para enviarmos as informações de recuperação de senha</p>

@using (Html.BeginForm())
{
    //O primeiro parametro é a mensagem e o segundo é a classe do bootstrap
    @Html.ValidationSummary("", new { @class = "text-danger" })

    //Com esse código o asp.net vai criar todos os campos definidos na model automaticamente
    @Html.EditorForModel()

    <div class="form-group">
        <div class="offset-2 col-md-10">
            <input type="submit" value="Enviar" class="btn" />
        </div>
    </div>
} 